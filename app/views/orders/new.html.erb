<h1>Сделать заказ:</h1>
<%= form_for :order, url: orders_path do |f| %>
    <p>
      <%= f.label 'Ваше имя' %><br/>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label 'Ваш телефон' %><br/>
      <%= f.text_field :phone %>
    </p>
    <p>
      <%= f.label 'Сообщение' %><br/>
      <%= f.text_area :message %>
    </p>
    <p>
      <%= f.submit 'Сделать заказ' %>
    </p>
<% end %>