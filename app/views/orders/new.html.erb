<h1>Сделать заказ:</h1>
<%= form_for :order, url: orders_path do |f| %>
    <p>
      <%= f.label 'Ваше имя' %><br/>
      <%= f.text_field :username, class: "form-control", style: "width: 30%;" %>
    </p>
    <p>
      <%= f.label 'Ваш телефон' %><br/>
      <%= f.text_field :phone, class: "form-control", style: "width: 30%;" %>
    </p>
    <p>
      <%= f.label 'Сообщение' %><br/>
      <%= f.text_area :message, class: "form-control", style: "width: 30%; height: 100px" %>
    </p>
    <p>
      <%= f.submit 'Сделать заказ', class: "btn btn-warning" %>
    </p>
<% end %>